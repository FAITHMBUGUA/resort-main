datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Booking {
  id        Int       @id @default(autoincrement())
  userId    Int
  hallName  String
  roomName  String?
  date      DateTime
  startHour Int
  endHour   Int
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
}

model Room {
  id       Int     @id @default(autoincrement())
  name     String
  type     String
  capacity Int
  price    Int
  image    String
}

model ConferenceHall {
  id       Int     @id @default(autoincrement())
  name     String
  capacity Int
  price    Int
  image    String
}

model Service {
  id       Int     @id @default(autoincrement())
  name     String
  price    Int
  category String
  image    String?
}
